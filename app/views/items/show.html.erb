<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%=@item.title%></h3>
      <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-6">
          <div class="white-box text-center">
            <%=image_tag @item.image_url%>
          </div>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-6">
          
          
          <h2 class="mt-5">
            Prix: <%=number_to_currency(@item.price, unit: "€", format: "%n %u")%><small class="text-success">(disponible)</small>
          </h2>
          <div class="d-flex">
            <%= button_to line_items_path(:item_id => @item.id), {class: "btn btn-success btn-rounded me-1"} do %>
              <i class="fa fa-shopping-cart"></i>
            <% end %>
          </div>
          <h3 class="box-title mt-5">Détails</h3>
          <ul class="list-unstyled">
            <li><i class="fa fa-check text-success"></i>Format disponible: <strong><em><%=@item.item_format%></em></strong></li>
          </ul>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
          <h3 class="box-title mt-5">General Info</h3>
          <div class="table-responsive">
            <table class="table table-striped table-product">
              <tbody>
                <tr>
                  <td width="390"><h4 class="box-title">Description produit</h4></td>
                  <td><p><%=@item.description%></p></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
