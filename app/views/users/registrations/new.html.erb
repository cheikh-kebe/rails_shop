<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-5" }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>
        <div class="form-group">
          <%= f.label "Email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Mot de passe" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> charact√®res minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Confirmer mot de passe" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "S'inscrire", class: "btn btn-lg btn-primary btn-block"  %>
        </div>
      <% end %>
    </div>
  </div>
      <%= render "users/shared/links" %>
</div>
