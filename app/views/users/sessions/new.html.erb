<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin mt-5" }) do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
        <div class="form-group">
          <%= f.label "Email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "Mot de passe" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Connexion", class: "btn btn-lg btn-primary btn-block"  %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
